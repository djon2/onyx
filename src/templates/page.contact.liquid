<div class="container padding-v-md">
  <div class="row align-center">
    <div class="column-small-12 column-medium-10 column-large-8">
      <h1 class="margin-b-xs">{{ page.title }}</h1>

      <div class="rte">
        {{ page.content }}
      </div>

      <div class="northern-form">
        {% form 'contact' %}

        {% if form.posted_successfully? %}
        <p class="form-success">
          {{ 'contact.form.post_success' | t }}
        </p>
        {% endif %}

        {{ form.errors | default_errors }}

        <div class="form-field form-field-text">
          <div class="form-control">
            <label class="sneaky-label" for="ContactFormName">
              <span class="form-label-text">{{ 'contact.form.name' | t }}</span>
              <input type="text" name="contact[name]" id="ContactFormName" placeholder="{{ 'contact.form.name' | t }}"
                value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
            </label>
          </div>
        </div>

        <div class="form-field form-field-email">
          <div class="form-control">
            <label class="sneaky-label" for="ContactFormEmail">
              <span class="form-label-text">{{ 'contact.form.email' | t }}</span>
              <input type="email" name="contact[email]" id="ContactFormEmail"
                placeholder="{{ 'contact.form.email' | t }}"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                spellcheck="false" autocomplete="off" autocapitalize="off">
            </label>
          </div>
        </div>

        <div class="form-field form-field-email">
          <div class="form-control">
            <label class="sneaky-label" for="ContactFormPhone">
              <span class="form-label-text">{{ 'contact.form.phone' | t }}</span>
              <input type="tel" name="contact[phone]" id="ContactFormPhone" placeholder="{{ 'contact.form.phone' | t }}"
                value="{% if form[phone] %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                pattern="[0-9\-]*">
            </label>
          </div>
        </div>

        <div class="form-field form-field-textarea">
            <div class="form-control">
              <label class="sneaky-label" for="ContactFormMessage">
                <span class="form-label-text">{{ 'contact.form.message' | t }}</span>
                <textarea rows="10" name="contact[body]" id="ContactFormMessage" placeholder="{{ 'contact.form.message' | t }}"></textarea>
              </label>
            </div>
          </div>

    {%- if form.body -%}
      {{- form.body -}}
    {%- endif -%}
  </textarea>

        <input type="submit" class="form-submit" value="{{ 'contact.form.send' | t }}">

        {% endform %}
      </div>
    </div>
  </div>
</div>
<script>
  
</script>